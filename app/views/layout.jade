mixin container
  include shared/navbar

  .container
    block content

unless is_xhr
  html
    head
      meta(charset="utf8")

      title
        = title || "csvp"

      link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css")
      link(rel="stylesheet" href="/stylesheets/style.css")

      script(src="https://code.jquery.com/jquery-2.1.4.min.js")
      script(src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/1.3.5/socket.io.min.js")
      script(src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.10.2/moment.min.js")
      script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js")
      script(src="//cdnjs.cloudflare.com/ajax/libs/history.js/1.8/native.history.min.js")

    body
      #container
        +container

      script(src="/javascripts/global.js")

else
  +container
